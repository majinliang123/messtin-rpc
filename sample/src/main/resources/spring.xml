<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="org.messtin.rpc.sample"/>

    <bean id="serviceRegistry" class="org.messtin.rpc.registry.zookeeper.ZookeeperServiceRegistry">
        <constructor-arg name="zkAddress" value="localhost:2181"/>
    </bean>

    <bean id="rpcServer" class="org.messtin.rpc.server.RpcServer">
        <constructor-arg name="serviceAddress" value="localhost:8080"/>
        <constructor-arg name="serviceRegistry" ref="serviceRegistry"/>
    </bean>

</beans>